%h2= t('titles.edit', resource: resource_name.to_s.humanize)

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
  = render partial: 'form', locals: {f: f, submit_text: t('actions.edit')}

%h3= t('devise.titles.cancel_account')

%p
  = t('devise.messages.cancel_account_question')
  = button_to t('devise.actions.cancel_account'), registration_path(resource_name), data: { confirm: t('actions.confirm') }, method: :delete

= link_to t('actions.back'), :back
